<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Grid" x:Key="GridBackGround">
        <Setter Property="Background" Value="#FFFFFF"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="StackPanelBackGround">
        <Setter Property="Background" Value="#FFFFFF"/>
    </Style>

    <Style TargetType="WrapPanel" x:Key="WrapPanelBackGround">
        <Setter Property="Background" Value="#FFFFFF"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonBackGround">
        <Setter Property="Background" Value="#FF9C1A"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>